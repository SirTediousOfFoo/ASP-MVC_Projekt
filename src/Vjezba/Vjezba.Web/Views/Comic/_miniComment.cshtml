@using Vjezba.Model
@using Microsoft.AspNetCore.Identity

@inject UserManager<AppUser> userManager
@model Comment
<div id="comment-@Model.ID">
    
    <div class="panel-body">
        @Html.Raw(Model.PosterName) said:
        @if (userManager.GetUserId(User) == Model.UserID)
        {
            <div class="btn btn-danger pull-left" onclick="deleteComment(@Model.ID)">X</div>
        }
        <br />
        @Html.Raw(Model.Content)
    </div>
</div>